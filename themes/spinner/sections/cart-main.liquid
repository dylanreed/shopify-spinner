{% comment %}
  ABOUTME: Main cart section with line items and checkout
  ABOUTME: Handles quantity updates and item removal
{% endcomment %}

<section class="cart-main section">
  <div class="container">
    <h1 class="cart-main__title">Your Cart</h1>

    {% if cart.item_count > 0 %}
      <form action="{{ routes.cart_url }}" method="post" class="cart-main__form">
        <div class="cart-main__items">
          {% for item in cart.items %}
            <div class="cart-item" data-cart-item>
              <div class="cart-item__image">
                {% if item.image != blank %}
                  <a href="{{ item.url }}">
                    <img
                      src="{{ item.image | image_url: width: 200 }}"
                      alt="{{ item.image.alt | default: item.title }}"
                      loading="lazy"
                    >
                  </a>
                {% else %}
                  <div class="cart-item__placeholder"></div>
                {% endif %}
              </div>

              <div class="cart-item__details">
                <h3 class="cart-item__title">
                  <a href="{{ item.url }}">{{ item.product.title }}</a>
                </h3>
                {% unless item.product.has_only_default_variant %}
                  <p class="cart-item__variant">{{ item.variant.title }}</p>
                {% endunless %}
                <p class="cart-item__price">{{ item.original_price | money }}</p>
              </div>

              <div class="cart-item__quantity">
                <label for="updates_{{ item.key }}" class="visually-hidden">Quantity</label>
                <input
                  type="number"
                  id="updates_{{ item.key }}"
                  name="updates[{{ item.key }}]"
                  value="{{ item.quantity }}"
                  min="0"
                  max="99"
                  class="cart-item__quantity-input"
                >
              </div>

              <div class="cart-item__total">
                {{ item.final_line_price | money }}
              </div>

              <a href="{{ item.url_to_remove }}" class="cart-item__remove" aria-label="Remove {{ item.title }}">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <line x1="18" y1="6" x2="6" y2="18"></line>
                  <line x1="6" y1="6" x2="18" y2="18"></line>
                </svg>
              </a>
            </div>
          {% endfor %}
        </div>

        <div class="cart-main__footer">
          <div class="cart-main__subtotal">
            <span>Subtotal</span>
            <span class="cart-main__subtotal-price">{{ cart.total_price | money }}</span>
          </div>
          <p class="cart-main__note">Shipping and taxes calculated at checkout.</p>

          <div class="cart-main__actions">
            <button type="submit" name="update" class="btn btn-secondary">
              Update Cart
            </button>
            <button type="submit" name="checkout" class="btn btn-primary">
              Checkout
            </button>
          </div>
        </div>
      </form>

    {% else %}
      <div class="cart-main__empty">
        <p>Your cart is empty.</p>
        <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary">
          Continue Shopping
        </a>
      </div>
    {% endif %}
  </div>
</section>

<style>
.cart-main__title {
  margin-bottom: var(--space-xl);
}

.cart-main__items {
  border-bottom: 1px solid var(--color-secondary);
  margin-bottom: var(--space-lg);
}

.cart-item {
  display: grid;
  grid-template-columns: 100px 1fr auto auto auto;
  gap: var(--space-md);
  align-items: center;
  padding: var(--space-lg) 0;
  border-top: 1px solid var(--color-secondary);
}

.cart-item__image {
  width: 100px;
  height: 100px;
  border-radius: var(--radius-sm);
  overflow: hidden;
}

.cart-item__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.cart-item__placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, var(--color-secondary) 0%, var(--color-primary) 100%);
}

.cart-item__title {
  font-size: 1rem;
  margin-bottom: var(--space-xs);
}

.cart-item__title a {
  color: var(--color-text);
  text-decoration: none;
}

.cart-item__title a:hover {
  color: var(--color-accent);
}

.cart-item__variant {
  font-size: 0.875rem;
  opacity: 0.7;
  margin-bottom: var(--space-xs);
}

.cart-item__price {
  font-size: 0.875rem;
}

.cart-item__quantity-input {
  width: 70px;
  text-align: center;
}

.cart-item__total {
  font-weight: 600;
  min-width: 100px;
  text-align: right;
}

.cart-item__remove {
  color: var(--color-text);
  opacity: 0.6;
  transition: opacity var(--transition-speed) ease;
}

.cart-item__remove:hover {
  opacity: 1;
  color: var(--color-accent);
}

.cart-main__footer {
  max-width: 400px;
  margin-left: auto;
}

.cart-main__subtotal {
  display: flex;
  justify-content: space-between;
  font-size: 1.25rem;
  font-weight: 600;
  margin-bottom: var(--space-sm);
}

.cart-main__note {
  font-size: 0.875rem;
  opacity: 0.7;
  margin-bottom: var(--space-lg);
}

.cart-main__actions {
  display: flex;
  gap: var(--space-md);
}

.cart-main__actions .btn {
  flex: 1;
}

.cart-main__empty {
  text-align: center;
  padding: var(--space-xl);
}

.cart-main__empty p {
  font-size: 1.25rem;
  margin-bottom: var(--space-lg);
}

@media (max-width: 768px) {
  .cart-item {
    grid-template-columns: 80px 1fr;
    grid-template-rows: auto auto;
  }

  .cart-item__image {
    grid-row: span 2;
    width: 80px;
    height: 80px;
  }

  .cart-item__quantity {
    justify-self: start;
  }

  .cart-item__total {
    text-align: left;
  }

  .cart-item__remove {
    position: absolute;
    right: 0;
    top: var(--space-lg);
  }

  .cart-main__actions {
    flex-direction: column;
  }
}
</style>

{% schema %}
{
  "name": "Cart Main",
  "settings": []
}
{% endschema %}

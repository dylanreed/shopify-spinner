{% comment %}
  ABOUTME: 404 Not Found page section
  ABOUTME: Displays friendly error message with link to continue shopping
{% endcomment %}

<section class="page-404 section">
  <div class="container">
    <div class="page-404__content">
      <h1 class="page-404__title">404</h1>
      <h2 class="page-404__heading">Page Not Found</h2>
      <p class="page-404__text">The page you're looking for doesn't exist or has been moved.</p>
      <a href="{{ routes.all_products_collection_url }}" class="btn btn-primary">
        Continue Shopping
      </a>
    </div>
  </div>
</section>

<style>
.page-404 {
  min-height: 60vh;
  display: flex;
  align-items: center;
}

.page-404__content {
  text-align: center;
  max-width: 500px;
  margin: 0 auto;
}

.page-404__title {
  font-size: clamp(6rem, 20vw, 12rem);
  line-height: 1;
  color: var(--color-accent);
  margin-bottom: var(--space-md);
}

.page-404__heading {
  font-size: 2rem;
  margin-bottom: var(--space-md);
}

.page-404__text {
  opacity: 0.7;
  margin-bottom: var(--space-lg);
}
</style>

{% schema %}
{
  "name": "404 Page",
  "settings": []
}
{% endschema %}

{% comment %}
  ABOUTME: Collection banner with title and description
  ABOUTME: Displays collection image if available
{% endcomment %}

<section class="collection-banner">
  {% if collection.image != blank %}
    <div class="collection-banner__image">
      <img
        src="{{ collection.image | image_url: width: 1920 }}"
        alt="{{ collection.image.alt | default: collection.title }}"
        loading="eager"
        width="1920"
        height="{{ 1920 | divided_by: collection.image.aspect_ratio | round }}"
      >
      <div class="collection-banner__overlay"></div>
    </div>
  {% endif %}
  <div class="collection-banner__content container">
    <h1 class="collection-banner__title">{{ collection.title }}</h1>
    {% if collection.description != blank %}
      <div class="collection-banner__description">
        {{ collection.description }}
      </div>
    {% endif %}
    <p class="collection-banner__count">{{ collection.products_count }} products</p>
  </div>
</section>

<style>
.collection-banner {
  position: relative;
  padding: var(--space-xl) 0;
  background: var(--color-secondary);
  min-height: 200px;
  display: flex;
  align-items: center;
}

.collection-banner__image {
  position: absolute;
  inset: 0;
}

.collection-banner__image img {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.collection-banner__overlay {
  position: absolute;
  inset: 0;
  background: rgba(0, 0, 0, 0.5);
}

.collection-banner__content {
  position: relative;
  z-index: 1;
}

.collection-banner__title {
  font-size: clamp(2rem, 5vw, 3.5rem);
  margin-bottom: var(--space-sm);
}

.collection-banner__description {
  max-width: 600px;
  opacity: 0.9;
  margin-bottom: var(--space-md);
}

.collection-banner__count {
  font-size: 0.9rem;
  opacity: 0.7;
}
</style>

{% schema %}
{
  "name": "Collection Banner",
  "class": "section-collection-banner",
  "blocks": [
    { "type": "@app" }
  ],
  "settings": [
    {
      "type": "checkbox",
      "id": "show_description",
      "label": "Show collection description",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_product_count",
      "label": "Show product count",
      "default": true
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 60,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 60,
      "unit": "px"
    }
  ]
}
{% endschema %}

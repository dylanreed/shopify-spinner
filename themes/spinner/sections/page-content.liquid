{% comment %}
  ABOUTME: Generic page content section
  ABOUTME: Displays page title and content
{% endcomment %}

<section class="page-content section">
  <div class="container">
    <div class="page-content__inner">
      <h1 class="page-content__title">{{ page.title }}</h1>
      <div class="page-content__body rte">
        {{ page.content }}
      </div>
    </div>
  </div>
</section>

<style>
.page-content__inner {
  max-width: 800px;
  margin: 0 auto;
}

.page-content__title {
  margin-bottom: var(--space-xl);
}

.page-content__body.rte h2 {
  margin-top: var(--space-xl);
  margin-bottom: var(--space-md);
}

.page-content__body.rte h3 {
  margin-top: var(--space-lg);
  margin-bottom: var(--space-sm);
}

.page-content__body.rte ul,
.page-content__body.rte ol {
  margin-bottom: var(--space-md);
  padding-left: var(--space-lg);
}

.page-content__body.rte li {
  margin-bottom: var(--space-xs);
}

.page-content__body.rte img {
  border-radius: var(--radius-md);
  margin: var(--space-lg) 0;
}

.page-content__body.rte blockquote {
  border-left: 4px solid var(--color-accent);
  padding-left: var(--space-lg);
  margin: var(--space-lg) 0;
  font-style: italic;
  opacity: 0.9;
}
</style>

{% schema %}
{
  "name": "Page Content",
  "settings": []
}
{% endschema %}
